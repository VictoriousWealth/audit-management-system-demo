- content_for :title, 'Create Audit Report'
%meta{name: "csrf-token", content: form_authenticity_token}

.row.justify-content-center
  .col-sm-10.col-lg-8
    %h2 Create Audit Report: Ref #{@audit.id.to_s.rjust(6, "0")}
    .card.card-light
      = simple_form_for @report, url: audit_report_path(@audit), method: :post do |f|
        .card-body
          .form-group
            -# Card for Audit Details
            .card.card-light
              %a.card-header.text-decoration-none{role: :button, data: { bs_toggle: :collapse, bs_target: '#audit_details' }, aria: { controls: 'audit_details', expanded: 'true' }}
                %h4 Audit Details
              #audit_details.card-body.collapse.show
                %dl.row
                  %dt.col-sm-3
                    Reference Number:
                  %dd.col-sm-9
                    #{@audit.id}
                  %dt.col-sm-3
                    Audit Start Date
                  %dd.col-sm-9
                    #{@start_date}

                %dl.row
                  %dt.col-sm-3
                    Audit Location:
                  %dd.col-sm-9
                    #{@location}
                  %dt.col-sm-3
                    Audit Scope:
                  %dd.col-sm-9
                    #{@audit_scope}
            %br/
            -# Card for Auditee details
            .card.card-light
              %a.card-header.text-decoration-none{role: :button, data: { bs_toggle: :collapse, bs_target: '#audit_details' }, aria: { controls: 'audit_details', expanded: 'true' }}
                %h4 Auditee Details

              #auditee_details.card-body.collapse.show
                %dl.row
                  %dt.col-sm-3
                    Company:
                  %dd.col-sm-9
                    #{@company_name}
                  %dt.col-sm-3
                    Auditee Name:
                  %dd.col-sm-9
                    -# #{@auditee.first_name} #{@auditee.last_name}
                  %dt.col-sm-3
                    Contacts:
                  %dd.col-sm-9
                    -# #{@contact.contact_email}
            %br/
            -# Card for Auditor details
            .card.card-light
              %a.card-header.text-decoration-none{role: :button, data: { bs_toggle: :collapse, bs_target: '#audit_details' }, aria: { controls: 'audit_details', expanded: 'true' }}
                %h4 Auditee Details

              #auditee_details.card-body.collapse.show
                %dl.row
                  %dt.col-sm-3
                    Lead Auditor:
                  %dd.col-sm-9
                    -# #{@lead_auditor.first_name} #{@lead_auditor.last_name}
 
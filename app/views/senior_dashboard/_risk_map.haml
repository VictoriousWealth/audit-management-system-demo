.container.custom-tab-container.p-0.border.border-dark
  %ul.nav.nav-tabs.mb-0
    %li.nav-item.w-100
      %a.nav-link.disabled.text-center.fw-bold{
        href: '#',
        tabindex: '-1',
        aria: { disabled: 'true' },
        style: 'border: none !important; border-bottom: black solid 1px !important;'
      }

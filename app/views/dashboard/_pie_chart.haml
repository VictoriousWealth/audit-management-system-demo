= pie_chart chart_data,      height: "300px",      colors: ["#42CA68", "#F4D73A", "#CE2D2D"],     library: {       title: {text: "Audit Status Overview", display: true},       plugins: {         legend: {           labels: {             usePointStyle: true,             pointStyle: "circle"           }         },         datalabels: {           formatter: raw("function(value, ctx) {             let total = ctx.chart._metasets[ctx.datasetIndex].total;             let percentage = (value / total * 100).toFixed(1) + '%';             return percentage;           }"),           color: "#000",           font: {             weight: 'bold'           }         }       }     } 
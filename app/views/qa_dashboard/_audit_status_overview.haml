.container.custom-tab-container.p-0.border.border-dark
  %ul.nav.nav-tabs.mb-0
    %li.nav-item.w-100
      %a.nav-link.disabled.text-center.fw-bold{href: '#', tabindex: '-1', aria: { disabled: 'true' }, style: "border: none !important;  border-bottom: black solid 1px !important;"} Audits Status Overview

  %ul.nav.nav-tabs.nav-fill.mb-0
    %li.nav-item
      %a.nav-link.active{href: '#pie-chart', data: { bs_toggle: 'tab' }, role: 'tab', style: "border-top-left-radius: 1em; border-top-right-radius: 1em; border: black 1px solid;"} Pie Chart
    %li.nav-item
      %a.nav-link{href: '#bar-chart', data: { bs_toggle: 'tab' }, role: 'tab', style: "border-top-left-radius: 1em; border-top-right-radius: 1em; border: black 1px solid;"} Bar Chart

  .tab-content.flex-grow-1
    .tab-pane.fade.show.active#pie-chart{role: 'tabpanel'}
      = render partial: 'pie_chart', locals: { pie_chart_data: @pie_chart_data }

    .tab-pane.fade#bar-chart{role: 'tabpanel'}
      = render partial: 'bar_chart', locals: { bar_chart_data: @bar_chart_data }

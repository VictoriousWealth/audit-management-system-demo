.table-scroll-container
  %table.table.table-striped.table-bordered-black.mb-0.text-center.align-middle.fs-6
    %thead
      %tr
        %th Audit ID
        %th Auditee
        %th Vendor
        %th Auditor(s)
        %th Start Date
        %th Progress
    %tbody
      - @in_progress_audits.each do |audit|
        %tr
          %td
            = link_to '#' do 
              %i= audit.id.to_s.rjust(4, '0') 
          %td= audit.user ? "#{audit.user.first_name} #{audit.user.last_name}" : "N/A"
          %td= audit.company&.name || "N/A"
          %td
            = markdown(audit.formatted_auditors).html_safe
          %td= audit.actual_start_date&.strftime('%d/%m/%Y') || "N/A"
          %td
            - progress = audit.score || 0  #TODO: change to questionanire progress
            .progress
              .progress-bar{style: "width: #{progress}%"}
                %span.visually-hidden= "#{progress}%"

/ Accordion container for "Audit Scope" section
%div.mt-4.accordion.border.border-black.rounded-4.overflow-hidden#accordionAuditScope
  / Accordion item wrapper
  %div.accordion-item.border-0
    / Accordion header with a button to expand/collapse the section
    %h2.accordion-header#headingAuditScope
      %button.accordion-button.collapsed.rounded-top-4.d-flex.justify-content-between.align-items-center{
        type: "button",
        "data-bs-toggle" => "collapse",
        "data-bs-target" => "#collapseAuditScope",
        "aria-expanded" => "false",
        "aria-controls" => "collapseAuditScope"
      }
        / Accordion title text
        .text-black-75.text-capitalize.fs-3.mb-2.flex-grow-1 Audit Scope
        / Custom dropdown icon
        %span.custom-arrow.ms-2.fs-4
          â–¼

    / Collapsible content area for the audit scope selection
    %div.accordion-collapse.collapse#collapseAuditScope{
      "aria-labelledby" => "headingAuditScope",
      "data-bs-parent" => "#accordionAuditScope"
    }
      %div.accordion-body.bg-white.rounded-bottom-4
        / Form group for the scope field
        .form-group
          / Hidden label for accessibility (screen readers)
          .text-black-75.text-capitalize.fs-3.mb-2
            = label_tag "audit_detail[scope]", "Scope", hidden: true
          / TextArea field for writing a scope
          = text_area_tag "audit_detail[scope]", @scope,
            required: true,
            class: "form-control bg-light border-1 rounded-0 py-3",
            placeholder: "Enter the audit's scope here...",
            rows: 4

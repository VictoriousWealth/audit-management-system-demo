<div class="leroy-form">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="login-container">
      <%= image_pack_tag 'images/GTIMC Logo.png', alt: 'Logo', class: 'logo2' %>
      <h2>Reset your password</h2>
      
      <div class="form-inputs">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", placeholder: "New password", class: "form-input" } %>

        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: true,
                    input_html: { autocomplete: "new-password", placeholder: "Confirm password", class: "form-input" } %>
      </div>

      <div class="form-actions">
        <button type="submit" class="bottom_button">Send</button>
      </div>
    </div>
  <% end %>
</div>
